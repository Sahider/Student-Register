@model EntityLayer.StudentApplicationViewModel

<h2>Are you sure you want to delete this student-course registration?</h2>

<div>
    <p><strong>Student:</strong> @Model.StudentName @Model.StudentSurname</p>
    <p><strong>Course:</strong> @Model.CourseName</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("StudentCourses")" class="btn btn-secondary">Cancel</a>
</form>
