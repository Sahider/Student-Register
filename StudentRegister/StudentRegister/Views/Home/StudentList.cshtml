@model List<EntityLayer.EntityStudent>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Student List</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Number</th>
                    <th>Email</th>
                    <th>Actions</th> <!-- İşlemler kolonu -->
                </tr>
            </thead>
            <tbody>
                @foreach(var student in Model)
                {
                    <tr>
                        <td>@student.StudentID</td>
                        <td>@student.Name</td>
                        <td>@student.Surname</td>
                        <td>@student.Number</td>
                        <td>@student.Email</td>
                        <td>
                            <a href="@Url.Action("Edit", "Student", new { id = student.StudentID })"
                            class="btn btn-warning btn-sm me-2">
                             <i class="bi bi-pencil-square"></i> Update</a>

                            <form asp-action="Delete" asp-controller="Student" asp-route-id="@student.StudentID" 
                            method="post" style="display:inline-block" 
                            onsubmit="return confirm('Are you sure you want to delete this student?');">
                                <button type="submit" class="btn btn-danger btn-sm">
                                   <i class="bi bi-trash"></i> Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
