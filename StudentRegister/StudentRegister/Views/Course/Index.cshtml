@model IEnumerable<EntityLayer.EntityCourse>

@{
    ViewBag.Title = "Course List";
}

<h2 class="page-title">📚 Courses List</h2>

<p>
    <a href="@Url.Action("Create", "Course")" class="btn btn-add">Add New Course</a>
</p>

<table class="table table-hover table-bordered shadow-sm rounded custom-table">
    <thead class="text-center custom-header">
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Min Capacity</th>
            <th>Max Capacity</th>
            <th style="text-align: center;">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var course in Model)
    {
        <tr>
            <td class="text-center">@course.CourseID</td>
            <td>@course.CourseName</td>
            <td class="text-center">@course.MinCapacity</td>
            <td class="text-center">@course.MaxCapacity</td>
            <td class="text-center">
                <a href="@Url.Action("Edit", "Course", new { id = course.CourseID })" class="btn btn-outline-warning btn-sm">Edit</a>
                <a href="@Url.Action("Delete", "Course", new { id = course.CourseID })" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this course?');">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<style>
   .page-title {
    color: white;
    text-align: center;
    font-weight: 700;
    font-size: 2rem;
    margin-bottom: 25px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
}


    .custom-table {
        background-color: #ffffff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(106, 13, 173, 0.2);
        width: 100%;
        min-width: 700px;
    }

    .custom-header {
        background: linear-gradient(45deg, #7b1fa2, #9c27b0);
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .custom-table tbody tr:nth-child(odd) {
        background-color: #f3e5f5; /* Açık mor */
    }

    .custom-table tbody tr:nth-child(even) {
        background-color: #e1bee7; /* Biraz koyu mor */
    }

    .custom-table tbody tr:hover {
        background-color: #ce93d8 !important;
        color: #2c003e;
        transition: background-color 0.3s ease, color 0.3s ease;
        cursor: pointer;
    }

    .custom-table td, .custom-table th {
        vertical-align: middle;
        padding: 14px 18px;
        text-align: center;
    }

    /* Butonlar */
    .btn-add {
        background-color: #9c27b0;
        color: white;
        padding: 8px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        display: inline-block;
        margin-bottom: 15px;
        transition: background-color 0.3s ease;
    }

    .btn-add:hover {
        background-color: #7b1fa2;
    }

    .btn-outline-warning {
        color: #9c27b0;
        border: 2px solid #9c27b0;
        padding: 5px 12px;
        border-radius: 4px;
        font-weight: 600;
        transition: background-color 0.3s ease, color 0.3s ease;
        text-decoration: none;
        margin-right: 8px;
        display: inline-block;
    }

    .btn-outline-warning:hover {
        background-color: #9c27b0;
        color: white;
    }

    .btn-outline-danger {
        color: #d32f2f;
        border: 2px solid #d32f2f;
        padding: 5px 12px;
        border-radius: 4px;
        font-weight: 600;
        transition: background-color 0.3s ease, color 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-outline-danger:hover {
        background-color: #d32f2f;
        color: white;
    }

    .btn-sm {
        font-size: 0.875rem;
        padding: 0.25rem 0.75rem;
    }
</style>
